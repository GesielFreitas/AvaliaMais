<%= form_for(@topic) do |f| %>
<%= f.hidden_field :company_id, :value => @company.id %>

<%= f.text_field :title, :placeholder => "Título do Tópico" %></br>
<%= f.text_area :body, :placeholder => "Conteúdo Tópico" %></br>

<%= button_tag(type: 'submit', class: "btn btn-primary") do %> Confirmar <% end %><br/>
<% end %>