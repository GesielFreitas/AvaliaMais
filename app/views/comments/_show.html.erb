<section class="comments-info">
	
<%if @comments.present?%>
	<% @comments.each do |comment|%>
		<span>	
			<%= User.find(comment.user_id).name%>:
			<%if comment.user_id == current_user.id%>
				<%= link_to image_tag("remove_icon.png"), delete_comment_path(comment.id), :id => 'delete-comment', data: { confirm: "Tem certeza que deseja excluir o comentário?"}, :class=> 'delete-'+current_user.name.split(" ")[0]%>
			<%end%>
			<div id="comment-description">
				<h5><%= comment.description%></h5>
			</div>
			</br>
		</span>
	<%end%>
<%end%>
</br>	
	<%= form_for(:comment, url: create_comment_path) do |form|%>
			<%= form.text_area :description, :placeholder => "Escreva um comentário...", :maxlength => 300, :class	=> 'comment-text-area'%>
		<%= form.hidden_field :topic_id, :value =>@topic.id %>
		<%= form.hidden_field :user_id, :value =>current_user.id %>
		</br>    
		<%= form.submit "Comentar",:class => "btn btn-primary btn-sm"%>
	<%end%>
</section>

