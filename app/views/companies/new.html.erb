<section id="cadastrar_empresa">
	<%= image_tag("fundoPrincipal.png", :alt => "img", :class => "img") %>

	<header>
        <span  id="header-span-new">avalia&nbsp;<%= image_tag("AVALIA_LOGO.png", :alt => "logo") %></span>
    </header>

    <section id="form_empresa">
    	<h3>Cadastre sua Empresa</h3><br/><br/><br/><br/><br/>
    	
		<%= form_for @company, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	
			<% if @company.errors.any? %>
				
				<h2> Errors: </h2>
				<ul>
					<% @company.errors.full_messages.each do |message|%>
					<li> <%= message %> </li>
					
					<%end%>
				</ul>>

			<%end%> 

			<%= f.text_field :name , :placeholder => "Nome da Empresa", :class => "form_control"%><br/><br/>

			<%= f.file_field :logo %></br>

			<%= f.select :segment_id, Segment.all.collect {|a| [a.name, a.id]}%></br></br>

			<%= f.text_field :address, :placeholder => "Endereço da Empresa", :class => "form_control" %><br/><br/>

			<%= f.select :uf_id, Uf.all.collect {|uf| [uf.name, uf.id]}%><br/><br/>

			<%= f.text_field :telephone , :placeholder => "Telefone de Contato", :class => "form_control" %><br/></br/>

			<%= f.text_field :email , :placeholder => "E-mail da Empresa", :class => "form_control"%><br/><br/>

			<%= f.text_area :description,  :placeholder => "Descrição", :id => "tarea" %><br/><br/>

			<%= button_tag(type: 'submit', class: "btn btn-primary") do %> Confirmar <% end %><br/></br/><br/></br/>

		<% end %>
		</section>
	</section>
<section id="linear-new"></section