<%= form_for @user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
	
	<%= f.label :Nome  %></br>
	<%= f.text_field :name %></br>

	<%= f.label :Email %></br>
	<%= f.text_field :email%></br>

	<%= f.label :Apelido %></br>
	<%= f.text_field :login%></br>

	<%= f.label :Data_de_nascimento %></br>
	<%= f.date_field :dateBirthday %></br>

	<%= f.label :Senha %></br>
	<%= f.password_field :password %></br>

	<%= f.label :Genero %></br>
	<%= f.text_field :gender %></br>
	
	<%= f.submit "Cadastrar" %>

	<% @user.errors.messages.values.each do |msg| %>
  		<% msg.each do |m| %>
   			<li><%= m %></li>
  		<%end %>
	<% end %>

<% end %>


<% if flash[:error] -%>
  <p class="error"><%= flash[:error] %></p>
<% end -%>