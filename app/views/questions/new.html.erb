<%= render "navbar/navbar" %>

<div id="erro-message">
    <% if flash[:error] -%>
      <p class="error"><%= flash[:error] %></p>
    <% end -%>
</div>
</br></br>

<h1>Enquete da empresa</h1>

<h3>Titulo</h3>


<div >
  <%= form_for(@question) do |quest| %>

    <%= quest.hidden_field :company_id, :value => @company.id %>

    <div class="field">
      <%= quest.label :title %>
      <%= quest.text_field :title%>
    </div>

    <h3>Adicione as suas opções:</h3>

    <%= link_to_add_association 'Adicione sua opção', quest, :option, 'data-association-insertion-node' => "#options-questions ol", 'data-association-insertion-method' => "append"%>


    <fieldset id="options-questions">
    <ol>
      <%= quest.fields_for :option do |options| %>
        <%= render partial: "option_fields", locals: {quest: option} %>
      <% end %>
    </ol>
    <fieldset />

    <br>

    <div class="actions">
      <%= quest.submit "Criar" %>
    </div>

  <% end %>
</div>
