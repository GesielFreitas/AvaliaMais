<div class="container-comment container">
    <div class="col-lg-12 col-sm-12 text-center">
    	<div class="well">
    		<h4>Tem algo em mente? Comente</h4>
		    <div class="input-group comment-field">
		    	<%= form_for(:comment, url: create_comment_path) do |form|%>
					<%= form.hidden_field :topic_id, :value =>@topic.id %>
					<%= form.hidden_field :user_id, :value =>current_user.id %>
					<%= form.text_area :description, :placeholder => "Escreva um comentário...", :maxlength => 300, :class	=> 'form-control input-sm chat-input comment-text-area', :id => 'userComment' %>
					</br>    
		        	<span class="input-group-btn">     
						<%= form.submit "Comentar",:class => "btn btn-primary btn-sm btn-comment"%>
		        	</span>	
				<%end%>
		    </div>
			</br>
		    <hr data-brackets-id="12673">
		    <ul data-brackets-id="12674" id="sortable" class="list-unstyled ui-sortable">
		        <%if @comments.present?%>
					<% @comments.each do |comment|%>
				        <strong class="pull-left primary-font"><%= User.find(comment.user_id).name%>:</strong>
				        <small class="pull-right text-muted">
					           	<%if comment.user_id == current_user.id%>
									<%= link_to image_tag("remove_icon.png"), delete_comment_path(comment.id), :id => 'delete-comment', data: { confirm: "Tem certeza que deseja excluir o comentário?"}, :class=> 'delete-'+current_user.name.split(" ")[0]%>
								<%end%>
				        </small>
				        </br>
				        <li class="ui-state-default-comment"><%= comment.description%></li>
				        </br>
				    <%end%>
				<%end%> 
		    </ul>
		</div>
    </div>
</div>
