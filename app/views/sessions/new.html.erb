<header id="header-enter">
	<span>
		avalia&nbsp;
		<%= link_to :controller => :welcome, :action => :index do %>
			<%= image_tag("AVALIA_LOGO.png", :alt => "logo") %>
		<% end %>
	</span>
</header>
<%= image_tag("fundoPrincipal.png", :alt => "img", :class => "img") %>
<section id="line"></section>
<section id="section-form">


	<%= form_for(:session, url: login_path) do |f| %>

    	<li><%= link_to "Inicio", home_path %></li>

		<h1>Login</h1></br>
		<%= f.text_field :login, :class => "text" , :placeholder => "Apelido ou e-mail" %></br></br>
		<%= f.password_field :password, :class => "text" , :placeholder => "Senha" %></br></br>
		
		<%= f.submit "Entrar", :id => "button-signup"%></br></br>
	<% end %>

	<%= link_to "Cadastrar", :controller => :users, :action => :new %></br>
	<div>
	<%= link_to "Esqueci minha senha"%>
	</div>
</section>