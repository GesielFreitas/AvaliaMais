<%= render "navbar/navbar" %>

<section class="show-search">
    <div>

      <h1>Resultado da Busca</h1>

     	<%if @company.present? %>
     		<h2>Empresas encontradas com o termo "<%= params[:company][:search]%>"</h2>
			<% @company.each do |c|%>
				<p><%= link_to c.name, c %></p>
			<%end%>
		<%else%>
			<h2>Nenhuma Empresa encontrada com o termo "<%= params[:company][:search]%>".</h2>
		<%end%>

      </br></br></br>  
    </div>
<section>
