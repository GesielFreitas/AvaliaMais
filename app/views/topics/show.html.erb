<%= render "navbar/navbar" %>
</br></br></br></br></br>	
<div class = "form_attach">
	<topicStyle>
		 Tópico criado em <%= @topic.create_date.strftime("%d/%m/%Y") %> 
	</topicStyle>
	</br></br>
	<topicStyle>
	  <strong>Título:</strong>
	  <%= @topic.title %>
	</topicStyle> </br></br>
		<topicStyle>
		  <strong>Conteúdo:</strong>
		  <%= @topic.body %>
		</br>
		  <strong>Autor:</strong>
		  <%= @topic.user.name %>
		</topicStyle>

		<% if @topic.user == current_user %>
			<li><%= link_to "Editar", edit_topic_path(@topic), class: "btn destroy-btn" %></li>
			<li><%= link_to "Excluir", @topic, data: { confirm: "Tem certeza que deseja excluir este tópico?" }, class: "btn btn-warning destroy-btn", method: :delete %></li>

		<% if current_user_topic_denunciation == nil %>	
			<%= form_for(:session, url: create_denunciation_path) do |f| %>
				<%= f.hidden_field :topic_id, :value => @topic.id %>
				<%= f.hidden_field :user_id, :value => current_user.id %>
				<%= f.submit "Denunciar", :class => "btn btn-danger", data: { confirm: "Tem certeza que deseja denunciar este tópico?" }%></br></br>
			<% end %>
		<% else %>
			<%= form_for(:session, url: destroy_denunciation_path) do |f| %>
				<%= f.hidden_field :denunciation_id, :value =>  current_user_topic_denunciation.id %>
				<%= f.hidden_field :topic_id, :value => @topic.id %>
				<%= f.submit "Retirar denúncia", :class => "btn btn-info"%></br></br>
			<% end %>


		<% end %>

			<li>Numero de denúncias: <%= @topic.denunciations.count %></li>

		<% end %>
	 	
			</div>

				<topicStyle>
				  	Comentários:
				</topicStyle>	
				<section class="comment-section">
					<%= render 'comments/show'%>
				</section>
			</div>
