<h1>Enquete da empresa</h1>

<h3>Titulo</h3>
  
<div >
  <%= form_for(@question) do |f| %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_field :title%>
    </div>

    <h3>Adicione as suas opções:</h3>

    <%= link_to_add_association 'Adicione sua opção', f, :option, 'data-association-insertion-node' => "#options-questions ol", 'data-association-insertion-method' => "append"%>


    <fieldset id="options-questions">
    <ol>
      <%= f.fields_for :option do |options| %>
        <%= render partial: "option_fields", locals: {f: option} %>
      <% end %>
    </ol>
    <fieldset />

    <br>

    <div class="actions">
      <%= f.submit "Criar" %>
    </div>

  <% end %>
</div>
