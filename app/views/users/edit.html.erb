<h1>Atualize seus dados</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

    <% end %>

<%= button_to "Salvar", {action: "update", id: @user.id} %>

   
  </div>
</div>